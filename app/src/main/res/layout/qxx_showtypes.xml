<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/qxx_contentview"
        android:layout_width="match_parent"
        android:layout_height="68.0dip"
        android:layout_below="@+id/qxx_topview"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape2"
        android:textColor="#ff000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18.0sp" />

    <TextView
        android:id="@+id/qxx_topview"
        android:layout_width="match_parent"
        android:layout_height="25.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8.0dip"
        android:background="@drawable/shapetop"
        android:gravity="left"
        android:textColor="#ffff0000" />

    <TextView
        android:id="@+id/qxx_dateview"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:layout_above="@+id/qxx_contentview"
        android:layout_alignRight="@+id/qxx_contentview"
        android:layout_marginRight="50dip"
        android:focusable="false"
        android:textColor="#ffff0000" />

    <Button
        android:id="@+id/qxx_deleteview"
        android:layout_width="27.0dip"
        android:layout_height="27.0dip"
        android:layout_above="@+id/qxx_contentview"
        android:layout_alignRight="@+id/qxx_contentview"
        android:layout_marginRight="7.0dip"
        android:background="@drawable/smallbutton2"
        android:focusable="false" />
</RelativeLayout>
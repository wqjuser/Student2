<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.ChangeInfo.ChangeInfoActivity">

    <TextView
        android:id="@+id/chinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="请谨慎修改个人信息"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chantv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chinfo"
            android:layout_marginTop="30dip"
            android:text="联系电话:"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/chanet1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chinfo"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入修改后的联系电话"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chantv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv1"
            android:layout_marginTop="30dip"
            android:gravity="center_horizontal"
            android:text="QQ号码  :"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/chanet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv1"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入修改后的QQ号码"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chantv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv2"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="30dip"
            android:gravity="center_horizontal"
            android:text="姓       名:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/chanet4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv2"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入修改后的姓名"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chantv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv4"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="30dip"
            android:gravity="center_horizontal"
            android:text="年       龄:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/chanet5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv4"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入修改后的年龄"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chantv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv5"
            android:layout_marginTop="30dip"
            android:gravity="center_horizontal"
            android:text="身份证号:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/chanet6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv5"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入修改后的身份证号"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chantv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv6"
            android:layout_marginTop="30dip"
            android:gravity="center_horizontal"
            android:text="家庭住址:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/chanet7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv6"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入修改后的家庭住址"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chantv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv7"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="30dip"
            android:gravity="center_horizontal"
            android:text="密       码:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/chanet8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chantv7"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/rounded_edittext"
            android:hint="请输入修改后的密码"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <Button
        android:layout_weight="20"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chantv8"
        android:layout_marginTop="30dip"
        android:background="@drawable/blue_button"
        android:onClick="EnsureChange"
        android:text="确认修改"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="20dp" />


</LinearLayout>

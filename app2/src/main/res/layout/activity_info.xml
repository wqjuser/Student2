<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/wqj_rel"
    android:layout_height="fill_parent"
    android:background="#F2F2F2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.hsd.student.activity.login.InfoActivity">
    <TextView
        android:id="@+id/wqj_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="请输入个人信息:"
        android:textSize="20dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/info_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="姓名:"
        android:layout_marginTop="30dip"
        android:layout_below="@id/wqj_info"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/info_et1"
        android:layout_below="@id/wqj_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_marginTop="20dip"
       />
    <TextView
        android:id="@+id/info_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="年龄:"
        android:layout_marginTop="33dip"
        android:layout_below="@id/info_tv1"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/info_et2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_below="@id/info_tv1"
        android:layout_marginTop="20dip"
        />
    <TextView
        android:id="@+id/info_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="性别:"
        android:layout_marginTop="33dip"
        android:layout_below="@id/info_tv2"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/info_et3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_below="@id/info_tv2"
        android:layout_marginTop="20dip"/>
    <TextView
        android:id="@+id/info_tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="学院:"
        android:layout_marginTop="40dip"
        android:layout_below="@id/info_tv3"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/info_et4"
        android:layout_below="@id/info_et3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_marginTop="20dip"/>
    <TextView
        android:id="@+id/info_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="专业:"
        android:layout_marginTop="40dip"
        android:layout_below="@id/info_tv4"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/info_et5"
        android:layout_below="@id/info_et4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_marginTop="20dip"/>
    <TextView
        android:id="@+id/info_tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Pho:"
        android:layout_marginTop="40dip"
        android:layout_below="@id/info_tv5"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/info_et6"
        android:layout_below="@id/info_et5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dip"
        android:layout_marginTop="20dip"/>
    <Button
        android:onClick="commit"
        android:layout_below="@id/info_et6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="20dp"
        android:layout_marginTop="40dip"
        android:background="@drawable/shape"/>





</RelativeLayout>
